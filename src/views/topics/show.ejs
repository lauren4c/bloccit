<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= topic.title %></h1>
      <p><%= topic.description %></p>
      <hr>
         <% if(currentUser) { %>
           <a href="/topics/<%= topic.id %>/posts/new" class="btn btn-info">Add a Trail</a>
           <% if(currentUser.isAdmin()) { %>
     <a href="/topics/<%= topic.id %>/edit" class="btn btn-outline-warning">Edit</a>
     <form style="display:initial" action="/topics/<%= topic.id %>/destroy" method="post">
       <button type="submit" class="btn btn-outline-danger">Remove</button>
     </form>
      <hr>
   <% } %>
 <% } %>


   <h1>Trails</h1>

   <ul class="list-group">
     <% topic.posts.forEach((post) => { %>
       <li class="list-group-item">
         <a href="/topics/<%= topic.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
       </li>
     <% }) %>
   </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
          <% include ../static/partials/messages.ejs %>
      <h1>New Trail</h1>
<!-- #1 -->
      <form action="/topics/<%= topicId %>/posts/create" method="post">
        <div class="form-group">
          <label for="title">Trail Name</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                   <small class="text-muted" id="titleHelp">name must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="body">Trail Description</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Post body"></textarea>
                   <small class="text-muted" id="bodyHelp">description must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-info">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
